<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical">
<TextView  
    android:id="@+id/title"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/choose"
    />



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical">
<TextView  
    android:id="@+id/textview"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="---------------------"
    />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical" android:weightSum="1" android:layout_height="362dp">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center" android:layout_width="220dp" android:layout_height="220dp"/>
    <ToggleButton android:layout_width="118dp" android:id="@+id/toggleButtonService" android:text="@string/serviceBtn" android:layout_gravity="center_horizontal" android:onClick="toggleService" android:textOff="start" android:textOn="stop" android:layout_height="108dp"></ToggleButton>

</LinearLayout>





</LinearLayout>